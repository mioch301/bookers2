<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>users</h1>
      
      <% @users.each do |user| %>
      <table class="table table-striped">
      <tr>
        <td>
          <span><%= image_tag user.get_profile_image(80,80) %></span>
        </td>
        <td>
          <span><%= user.name %></span>
        </td>
        <td>
          <span><%= link_to "Show", user_path(user.id) %></span>
        </td>
      </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>