<h1>Editing Book</h1>

<%= render 'layouts/errors', obj: @book %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book', class: "btn btn-secondary"%>
<% end %>

<table>
  <tr>
    <td><%= link_to "Show", book_path(@book.id) %></td>
    <td>|</td>
    <td><a href="/books">Back</a></td>
  </tr>
</table>